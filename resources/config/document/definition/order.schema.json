{
    "$id": "order.schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order schema",
    "type": "object",
    "definitions": {
        "batchCard": {
            "type": "object",
            "required": [
                "id",
                "name",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "mfiDefinition": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "number"
                },
                "type": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "order": {
            "type": "object",
            "required": [
                "orderId"
            ],
            "properties": {
                "orderId": {
                    "type": "string",
                    "format": "uuid"
                },
                "assetName": {
                    "type": "string"
                },
                "productName": {
                    "type": "string"
                },
                "processOrder": {
                    "type": "string"
                },
                "batchNumber": {
                    "type": "string"
                },
                "plannedStartDatetime": {
                    "type": "string"
                },
                "plantName": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "instance": {
            "type": "object",
            "properties": {
                "plannedStartDatetime": {
                    "type": "string"
                },
                "actualStartDatetime": {
                    "type": "string"
                },
                "plannedEndDatetime": {
                    "type": "string"
                },
                "actualEndDatetime": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "processBlocks": {
            "type": "array",
            "additionalItems": false,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "expectedLeadTime",
                    "sequence"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "expectedLeadTime": {
                        "type": "string"
                    },
                    "actualLeadTime": {
                        "type": "string"
                    },
                    "actualStartDatetime": {
                        "type": "string"
                    },
                    "actualEndDatetime": {
                        "type": "string"
                    },
                    "sequence": {
                        "type": "number"
                    },
                    "tasks": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "type": "object",
                            "required": [
                                "id",
                                "submission",
                                "submissionDatetime"
                            ],
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "format": "uuid"
                                },
                                "submission": {
                                    "type": "object",
                                    "required": [
                                        "formId",
                                        "payloadId"
                                    ],
                                    "properties": {
                                        "formId": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "payloadId": {
                                            "type": "string",
                                            "format": "uuid"
                                        }
                                    },
                                    "additionalProperties": false
                                },
                                "submissionDatetime": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "parameters": {
            "type": "object",
            "properties": {}
        },
        "ot-raw-material": {
            "type": "object",
            "properties": {}
        },
        "ot-sensor": {
            "type": "object",
            "properties": {}
        },
        "ot-recipe-status": {
            "type": "object",
            "properties": {}
        },
        "status": {
            "enum": [
                "OPEN",
                "ACTIVE",
                "FINISHED"
            ]
        },
        "comment": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "productionPreparation": {
            "type": "object",
            "properties": {
                "batch": {
                    "type": "object",
                    "properties": {
                        "remarks": {
                            "type": "object",
                            "properties": {
                                "comment": {
                                    "type": "string"
                                }
                            }
                        },
                        "adjustments": {
                            "type": "object",
                            "properties": {
                                "samples": {
                                    "type": "object",
                                    "properties": {
                                        "comment": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "rawMaterials": {
                                    "type": "object",
                                    "properties": {
                                        "comment": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "rawsStaging": {
                    "type": "object",
                    "properties": {
                        "firstCheck": {
                            "type": "object",
                            "properties": {
                                "comment": {
                                    "type": "string"
                                },
                                "proceed": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "required": [
        "status",
        "order",
        "instance"
    ],
    "properties": {
        "status": {
            "$ref": "#/definitions/status"
        },
        "batchCard": {
            "$ref": "#/definitions/batchCard"
        },
        "mfiDefinition": {
            "$ref": "#/definitions/mfiDefinition"
        },
        "order": {
            "$ref": "#/definitions/order"
        },
        "instance": {
            "$ref": "#/definitions/instance"
        },
        "processBlocks": {
            "$ref": "#/definitions/processBlocks"
        },
        "parameters": {
            "$ref": "#/definitions/parameters"
        },
        "ot-raw-material": {
            "$ref": "#/definitions/ot-raw-material"
        },
        "ot-sensor": {
            "$ref": "#/definitions/ot-sensor"
        },
        "ot-recipe-status": {
            "$ref": "#/definitions/ot-recipe-status"
        },
        "comment": {
            "$ref": "#/definitions/comment"
        },
        "productionPreparation": {
            "$ref": "#/definitions/productionPreparation"
        }
    },
    "additionalProperties": false
}